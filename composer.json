{
    "name": "joecampo/laravel-notification-basecamp",
    "description": "Post notifications to Basecamp 3 Campfires",
    "homepage": "https://github.com/joecampo/laravel-notification-channels",
    "license": "MIT",
    "authors": [
        {
            "name": "Joe Campo",
            "email": "jcampo@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2",
        "guzzlehttp/guzzle": "^7.0",
        "illuminate/notifications": "5.8.*|^6.0|^7.0|^8.0|^9.0|^10.0|^11.0",
        "illuminate/support": "5.8.*|^6.0|^7.0|^8.0|^9.0|^10.0|^11.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "orchestra/testbench": "^7.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "NotificationChannels\\Basecamp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NotificationChannels\\:channel_namespace\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
